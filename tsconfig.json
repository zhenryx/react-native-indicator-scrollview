{
  "compilerOptions": {
    "target": "esnext",                     
    "module": "commonjs",//es or commonjs                 
    "jsx": "react-native",                     
    "strict": true,
    "allowSyntheticDefaultImports": true,// 允许从没有默认导出的模块中默认导入                 
    "esModuleInterop": true,          
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true, 
    "sourceMap": true,
    "declaration": true,                  
    "declarationMap": true,              
    "outDir": "dist",                    
    "lib": ["ES2019"],             
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true               
  },
  "include": ["src"],                     
  "exclude": [
    "node_modules",
    "dist",
  ]     
}
